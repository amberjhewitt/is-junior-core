@model IEnumerable<TeamsPractice.Models.Player>

@{
    ViewBag.Title = "ShowPlayers";
}

<h2>ShowPlayers</h2>

<p>
    @Html.ActionLink("Add a New Player", "AddPlayer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Player_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player_First_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player_Last_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team_Code)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Player_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player_First_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player_Last_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team_Code)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPlayer", new { playerCode = item.Player_Code }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
